<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Change the mindset", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="col-md-6">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                        <li>@Html.ActionLink("À propos de nous", "About", "Home")</li>
                        @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("Nos projets", "Index", "Utilisateurs")</li>
                        <li>@Html.ActionLink("Services", "Index", "Utilisateurs")</li>
                        <li>@Html.ActionLink("FAQ", "Index", "Utilisateurs")</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="nav navbar-nav" style="float:right">
                        <li>@Html.ActionLink("S'inscrire", "Create", "Utilisateurs")</li>
                        <li>@Html.ActionLink("Se connecter", "Index", "Utilisateurs")</li>
                        <li>@Html.ActionLink("En-Fr", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div>
                <div class="col-md-4">
                    <h4>Nos partenaires</h4>
                </div>
            </div>
            <div class="col-md-4">
                <p>&copy; @DateTime.Now.Year - Change the mindset</p>
            </div>
            <div class="col-md-4">
                <h4 style="float:right">Nous joindre</h4>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
